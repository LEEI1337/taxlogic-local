# TaxLogic.local Environment Configuration
# Copy this file to .env.local and fill in your values

# ==============================================
# LLM Configuration
# ==============================================

# Ollama Configuration (Local - Primary)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest

# LM Studio Configuration (Local - Secondary)
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_MODEL=local-model

# Claude API (BYOK - Optional Cloud)
# Only needed if you want to use Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI / ChatGPT Configuration (BYOK - Optional Cloud)
# Only needed if you want to use OpenAI/ChatGPT
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# Google Gemini Configuration (BYOK - Optional Cloud)
# Get a free API key at https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# OpenAI-Compatible Endpoint Configuration (Optional)
# Use this for self-hosted providers like vLLM, text-generation-webui, LocalAI, etc.
OPENAI_COMPATIBLE_URL=
OPENAI_COMPATIBLE_API_KEY=
OPENAI_COMPATIBLE_MODEL=local-model

# ==============================================
# Database Configuration
# ==============================================

# SQLite database path (relative to app directory)
DATABASE_PATH=./db/taxlogic.db

# ==============================================
# RAG / Vector Database Configuration
# ==============================================

# Qdrant Configuration (for RAG knowledge base)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=qdrant-local-key
QDRANT_COLLECTION=austrian_tax_law

# ==============================================
# Application Settings
# ==============================================

# Environment mode (development | production)
NODE_ENV=development

# App data directory (where user documents are stored)
APP_DATA_DIR=./data

# Default tax year for new filings
DEFAULT_TAX_YEAR=2024

# Locale settings
APP_LOCALE=de-AT
APP_CURRENCY=EUR

# ==============================================
# Feature Flags
# ==============================================

# Enable/disable features
FEATURE_OCR_ENABLED=true
FEATURE_RAG_ENABLED=true
FEATURE_CLOUD_FALLBACK=false
FEATURE_AUDIT_PREP=true

# Debug settings (development only)
DEBUG_LLM_RESPONSES=false
DEBUG_IPC_MESSAGES=false

# ==============================================
# Security Settings
# ==============================================

# Content Security Policy (for Electron)
# Only modify if you know what you're doing
CSP_CONNECT_SRC=http://localhost:*

# ==============================================
# OCR Configuration
# ==============================================

# Tesseract language (deu = German, eng = English)
TESSERACT_LANG=deu+eng

# OCR confidence threshold (0.0 - 1.0)
OCR_CONFIDENCE_THRESHOLD=0.7
